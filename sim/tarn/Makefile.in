## COMMON_PRE_CONFIG_FRAG

# dtbdir = @datadir@/gdb/dtb

SIM_OBJS = \
	$(SIM_NEW_COMMON_OBJS) \
	interp.o \
	sim-resume.o

# SIM_EXTRA_LIBS = -lm -lz
# SIM_EXTRA_INSTALL = install-dtb
# SIM_EXTRA_CFLAGS = -DDTB="\"$(dtbdir)/tarn-gdb.dtb\""

## COMMON_POST_CONFIG_FRAG

all: tarn-gdb.dtb

tarn-gdb.dtb: tarn-gdb.dts
	dtc -O dtb -o tarn-gdb.dtb ${srcdir}/tarn-gdb.dts

install-dtb: tarn-gdb.dtb
	$(SHELL) $(srcdir)/../../mkinstalldirs $(DESTDIR)$(dtbdir)
	$(INSTALL_DATA) tarn-gdb.dtb $(DESTDIR)$(dtbdir)/tarn-gdb.dtb
